<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/black_gradient"
    >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageViewFriendReq"
        android:layout_width="40dp"
        android:layout_height="400dp"
        android:layout_margin="20dp"
        android:src="@drawable/userdefaul" />

    <TextView
        android:id="@+id/textViewfriendReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adnan Ahned"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageViewFriendReq"
        android:layout_toEndOf="@+id/imageViewFriendReq"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

</RelativeLayout>