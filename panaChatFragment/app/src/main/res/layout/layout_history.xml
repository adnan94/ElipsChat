<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9">

    <TextView
        android:id="@+id/historyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Name : Adnan Ahmed"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/historyStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/historyName"
        android:layout_alignStart="@+id/historyName"
        android:layout_below="@+id/historyName"
        android:text="Status : Missed"
        android:textColor="#f9020a" />

    <TextView
        android:id="@+id/historyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/historyStatus"
        android:layout_alignStart="@+id/historyStatus"
        android:layout_below="@+id/historyStatus"
        android:text="Large Text"
        android:textSize="15dp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/Historycircular"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/historyName"
        android:background="#d9d9d9"
        android:layout_marginLeft="5dp"
        android:src="@drawable/userdefaul" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButtonCall"
        android:src="@drawable/callll"

        android:layout_alignTop="@+id/historyName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>