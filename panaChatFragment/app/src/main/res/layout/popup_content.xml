<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:orientation="vertical"

    >
    <!--<ListView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="#9900"-->
    <!--android:id="@+id/listView"-->
    <!--&gt;</ListView>-->
    <ImageView
        android:id="@+id/textViewAlert"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/group_default" />

    <TextView
        android:id="@+id/nameDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAlert"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textStyle="bold"

        />

    <ListView
        android:id="@+id/dialogListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/editTextPop"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameDialog"
        android:divider="@null"></ListView>

    <ImageButton
        android:id="@+id/sendPop"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextPop"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dialogListView"
        android:layout_gravity="center"
        android:background="#d9d9d9"
        android:src="@drawable/ic_chat_send_active"></ImageButton>

    <EditText
        android:id="@+id/editTextPop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/sendPop"
        android:layout_toStartOf="@+id/sendPop"
        android:background="#d9d9d9"
        android:hint="Write some message !"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#000" />

</RelativeLayout>